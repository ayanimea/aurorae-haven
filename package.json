{
  "name": "aurorae-haven",
  "version": "1.0.1",
  "type": "module",
  "description": "> **A calm, astro-themed productivity app designed for neurodivergent users.**   > Manage routines, tasks, habits, notes, and stats with Markdown import/export, reminders, gamification, and secure local/mobile use.",
  "homepage": "/aurorae-haven",
  "main": "src/index.jsx",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "test": "jest --coverage",
    "test:export": "jest src/__tests__/dataManager.test.js --testNamePattern='should export aurorae_tasks|should export brainDumpEntries'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:md": "markdownlint '**/*.md' -i node_modules",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "vite build",
    "build:offline": "node scripts/create-offline-package.js",
    "test:offline": "node scripts/test-offline-package.js",
    "preview": "vite preview",
    "validate-pwa": "node scripts/validate-pwa.cjs",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.18",
    "dompurify": "^3.2.7",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "katex": "^0.16.23",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.5",
    "node-ical": "^0.23.1",
    "react": "^18.2.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.3",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "ajv": "^8.17.1",
    "archiver": "^7.0.1",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fake-indexeddb": "^6.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.0",
    "stylelint": "^17.0.0",
    "vite": "^7.1.9",
    "vite-plugin-pwa": "^1.0.3"
  },
  "overrides": {
    "babel-jest": {
      "test-exclude": "7.0.1",
      "source-map": "0.7.4",
      "magic-string": "0.30.19",
      "babel-plugin-istanbul": {
        "@istanbuljs/load-nyc-config": {
          "js-yaml": "^3.14.2"
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "standard": {
    "env": [],
    "globals": [],
    "ignore": [
      "node_modules/",
      "build/",
      "dist/"
    ],
    "rules": {
      "space-before-function-paren": "off"
    }
  }
}
